<p id="notice"><%= notice %></p>

<h1>Workouts</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Trainer</th>
      <th>Duration mins</th>
      <th>Date of workout</th>
      <th>Paid amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><a href="http://localhost:3000/clients/<%= workout.client.id %>"><%= workout.client.name %></a></td>
        <td><a href="http://localhost:3000/trainers/<%= workout.trainer.id %>"><%= workout.trainer.name %></a></td>
        <td><%= workout.duration_mins %></td>
        <td><%= workout.date_of_workout %></td>
        <td><%= workout.paid_amount %></td>
        <td><%= link_to 'Show', workout %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
        <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

